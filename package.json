{
  "name": "@sinianluoye/bull-board-root",
  "version": "6.17.0-alpha.0",
  "private": false,
  "description": "a copy from bull-board, Bull queue UI for inspecting jobs",
  "keywords": [
    "bull",
    "@sinianluoye/bullmq",
    "redis",
    "queue",
    "monitoring",
    "dashboard"
  ],
  "bugs": {
    "url": "https://github.com/sinianluoye/bull-board/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinianluoye/bull-board.git"
  },
  "license": "MIT",
  "author": "sinianluoye",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A run build",
    "clean": "yarn workspaces foreach -A run clean",
    "dev": "concurrently --names \"UI,API\" -c \"bgBlue.bold,bgMagenta.bold\" \"yarn dev:ui\" \"yarn dev:server\"",
    "dev:docker": "docker-compose up -d",
    "dev:server": "ts-node-dev --rs example.ts",
    "dev:ui": "yarn workspace @sinianluoye/bull-board-ui run dev",
    "lint": "oxlint './packages/**/*.{ts,tsx}' . --fix",
    "prepublishOnly": "yarn build",
    "release": "release-it --only-version",
    "test": "yarn workspaces foreach -A run test"
  },
  "resolutions": {
    "@types/react": "17.0.63",
    "@types/react-dom": "17.0.20"
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.12",
    "auto-changelog": "^2.5.0",
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "oxlint": "^1.14.0",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "yarn@4.12.0",
  "release-it": {
    "plugins": {
      "@release-it-plugins/workspaces": true
    },
    "npm": false,
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
      "before:init": [
        "yarn lint",
        "yarn test"
      ],
      "after:bump": [
        "yarn",
        "npx auto-changelog -p",
        "yarn build"
      ]
    },
    "github": {
      "release": true
    }
  }
}
