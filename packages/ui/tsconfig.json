{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": ["es2021", "dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "target": "es2021",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["./src", "./typings/*.d.ts"]
}
